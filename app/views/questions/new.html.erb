<h1>Нов въпрос в <%= @quiz.name %></h1>

<%= form_for [@quiz, @question] do |f| %>
  <% if @question.errors.any? %>
    <div class="errors">
      <h2>Грешки:</h2>
      <ul>
        <% @question.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p><%= f.text_field :name %></p>
  <p><%= f.text_area :description %></p>
  <p>
    <%= f.submit 'Добави въпроса' %>
    или
    <%= link_to 'обратно към анкетата', @quiz %>
  </p>
<% end %>
